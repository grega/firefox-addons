{
  "manifest_version": 3,
  "name": "String Replacer",
  "version": "1.0",
  "description": "Replaces hardcoded strings in form fields.",
  "browser_specific_settings": {
    "gecko": {
      "id": "string-replacer@gregannandale.com",
      "strict_min_version": "137.0"
    }
  },
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
